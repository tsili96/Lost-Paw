@model IEnumerable<LostPaw.ViewModels.DisplayPostListViewModel>

@{
    ViewData["Title"] = "Posts";
}

<h1>Posts</h1>

@if (User.Identity.IsAuthenticated)
{
    <a asp-area="" asp-controller="Posts" asp-action="Create" class="btn btn-primary">New Post</a>
}

<div>
    @foreach (var post in Model)
    {
        <div class="post-summary">
            <h2>@post.Title (@post.Type)</h2>
            <p><strong>Date Lost/Found:</strong> @(post.DateLostFound?.ToString("MM/dd/yyyy") ?? "N/A")</p>

            @if (!string.IsNullOrEmpty(post.ImageUrl))
            {
                <img src="@post.ImageUrl" alt="@post.Title" style="max-width: 200px;" />
            }

            <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-info">View Details</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning">Edit</a>
            }
        </div>
    }
</div>
