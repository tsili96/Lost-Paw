@model IEnumerable<LostPaw.ViewModels.DisplayPostListViewModel>
@using System.Security.Claims

@{
    ViewData["Title"] = "Posts";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Posts</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-area="" asp-controller="Posts" asp-action="Create" class="btn pastel-purple">New Post</a>
        }
    </div>

    <div class="row mt-4">
        @foreach (var post in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <img src="@post.ImageUrl" class="card-img-top" alt="@post.Title" style="height: 200px; object-fit: cover;" />
                    }
                    <div class="card-body">
                        <h5 class="card-title">@post.Title</h5>
                        <p class="card-text"><strong>Type:</strong> @post.Type</p>
                        <p class="card-text"><strong>Posted by:</strong> @post.Username</p>
                        <p class="card-text"><strong>Date Lost/Found:</strong> @(post.DateLostFound?.ToString("MM/dd/yyyy") ?? "N/A")</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Details" asp-route-id="@post.Id" class="btn pastel-purple">View Details</a>
                            @if (User.Identity.IsAuthenticated && post.UserId == User.FindFirstValue(ClaimTypes.NameIdentifier))
                            {
                                <a asp-action="Edit" asp-route-id="@post.Id" class="btn pastel-green">Edit</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
