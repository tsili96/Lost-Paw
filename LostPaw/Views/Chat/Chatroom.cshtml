@model LostPaw.Models.Chat

@{
    ViewData["Title"] = "Chat Room";
}

@if (Model.User1 == null || Model.User2 == null)
{
    <h2>Error: Users not found in this chat</h2>
}
else
{
    <h2>Chat with @(Model.User1.Id == User.Identity.Name ? Model.User2.UserName : Model.User1.UserName)</h2>
}

<div class="chat-room">
    <div class="messages">
        @foreach (var message in Model.Messages.OrderBy(m => m.Timestamp))
        {
            <div class="message @(message.SenderId == User.Identity.Name ? "sent" : "received")">
                <strong>@message.Sender.UserName</strong>: @message.Content
                <span class="timestamp">@message.Timestamp.ToString("HH:mm")</span>
            </div>
        }
    </div>

    <form method="post" asp-action="SendMessage" class="message-form">
        <input type="hidden" id="senderId" value="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value" />
        <input type="hidden" id="chatId" name="chatId" value="@Model.Id" />
        <textarea id="messageInput" name="message" class="form-control" placeholder="Type a message..." required></textarea>
        <button type="submit" class="btn btn-primary">Send</button>
    </form>
</div>
