@model LostPaw.ViewModels.EditProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg p-4">
                <h1 class="text-center mb-4">Edit Profile</h1>

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div class="text-center">
                        @if (!string.IsNullOrEmpty(Model.ProfilePicUrl))
                        {
                            <img src="@Model.ProfilePicUrl"
                                 alt="Profile Picture"
                                 class="rounded-circle"
                                 style="width: 150px; height: 150px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="rounded-circle default-avatar d-inline-flex align-items-center justify-content-center shadow"
                                 style="width: 150px; height: 150px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#bbb" viewBox="0 0 16 16">
                                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                                </svg>
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <label asp-for="ProfilePicUrl" class="form-label">Profile Picture</label>
                        <input type="file" name="ProfilePicture" class="form-control" />
                        <span asp-validation-for="ProfilePicture" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Username</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Fullname" class="form-label">Full Name</label>
                        <input asp-for="Fullname" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="AboutMe" class="form-label">About Me</label>
                        <textarea asp-for="AboutMe" class="form-control" rows="4" placeholder="Write a few words about yourself..."></textarea>
                    </div>

                    <div class="form-check mb-2">
                        <input asp-for="ShowFullName" class="form-check-input" type="checkbox" />
                        <label asp-for="ShowFullName" class="form-check-label">
                            Display Full Name on Profile
                        </label>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="ShowPhoneNumber" class="form-check-input" type="checkbox" />
                        <label asp-for="ShowPhoneNumber" class="form-check-label">
                            Display Phone Number on Profile
                        </label>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn pastel-green">Save Changes</button>
                        <a asp-controller="Profile" asp-action="Profile" asp-route-username="@User.Identity.Name" class="btn pastel-purple">Cancel</a>

                    </div>
                </form>
            </div>
        </div>
    </div>
    
</div>
