@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5" style="max-width: 450px;">
    <h2 class="text-center mb-4">Welcome back!</h2>

    <form asp-action="Login" method="post" class="shadow p-4 rounded bg-white">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" name="email" class="form-control rounded-pill" placeholder="Enter your email" />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" class="form-control rounded-pill" placeholder="Enter your password" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn pastel-purple rounded-pill">Login 🐾</button>
        </div>
    </form>

    <div class="text-center mt-3">
        <p class="text-muted">Don't have an account? <a href="@Url.Action("Register", "Account")" class="text-decoration-none">Register here</a></p>
    </div>
</div>
